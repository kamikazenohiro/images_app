<h2>画像置き場トップページ</h2>
<% if user_signed_in? %>
  <%= "#{current_user.nickname}さんは、ログインしています" %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
  <h2><%= link_to '新規投稿', new_message_path %></h2>
<% else %>
  <%= link_to "新規登録", new_user_registration_path  %>
  <%= link_to "ログイン", new_user_session_path %>
  <br><br>
<% end %>

<% @messages.each do |message| %>
  <%= "投稿者 #{message.user.nickname}" %>
  <% if user_signed_in? && current_user.id == message.user_id %>
    <%= link_to '削除', message_path(message.id), method: :delete %>
  <% end %>
  <%= message.content %>
  <div class="messages">
    <% message.images.each do |image| %>
      <%= image_tag image, class:'images' %>
    <% end %>
  </div>
<% end %>